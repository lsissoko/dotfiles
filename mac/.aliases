#!/usr/bin/env bash

# .bashrc
alias bash_reload=". ~/.bashrc"
alias bash_vi='vi ~/.bashrc'
alias bash_subl='subl ~/.bashrc'
alias bash_a_vi='vi ~/.aliases'
alias bash_a_subl='subl ~/.aliases'
alias bash_f_vi='vi ~/.functions'
alias bash_f_subl='subl ~/.functions'

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'
alias h='history'

# Network
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias wifi-restart="sudo service network-manager restart"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Shortcuts
alias home="cd ~"
alias desk="cd ~/Desktop"
alias docs="cd ~/Documents"
alias dl="cd ~/Downloads"
alias code="cd ~/code"

# File explorer
alias explorer="open ."

# Audio
alias audio-restart="kill -9 `ps ax | grep 'coreaudio[a-z]' | awk '{print $1}'`"

# Git
alias gb='git branch'
alias gf='git fetch'
alias gpo='git push origin'
alias gcm='git commit -am'
alias go='git checkout'
alias gob='git checkout -b'

# VS Code (resolve conflict with `code` alias for ~/code directory)
alias vscode='/Applications/Visual\ Studio\ Code.app/Contents/Resources/app/bin/code'
